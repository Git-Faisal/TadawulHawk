# Tadawul Stock Collector - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tadawul_stocks
DB_USER=postgres
DB_PASSWORD=your_password_here

# ============================================
# API CONFIGURATION
# ============================================
# Delay between API requests (seconds) - prevents rate limiting
API_RATE_LIMIT_DELAY=0.5

# Maximum retry attempts for failed API calls
API_MAX_RETRIES=3

# Delay after processing a batch of stocks (seconds)
API_BATCH_DELAY=5

# Number of stocks to process before batch delay
API_BATCH_SIZE=50

# ============================================
# EXPORT CONFIGURATION
# ============================================
# Paths for export files (relative to project root)
EXPORT_JSON_PATH=./exports/json/
EXPORT_CSV_PATH=./exports/csv/

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file directory
LOG_FILE_PATH=./logs/

# Maximum log file size (bytes) before rotation
LOG_MAX_BYTES=10485760

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# ============================================
# DATA COLLECTION CONFIGURATION
# ============================================
# Number of years of historical data to collect
HISTORICAL_YEARS=5

# Use test mode by default (true/false)
# Test mode only processes 3 stocks
TEST_MODE=false

# Test stock symbols (comma-separated)
TEST_SYMBOLS=2222.SR,1120.SR,7010.SR